<!-- Contact Form Begin -->
<div class="site-section">
    <div class="container">
    {% include 'default/alert.html.twig' %}
    <div class="row">
        <div class="col-md-12 col-lg-8 mb-5">
        {{ form_start(form) }}
            <div class="row form-group">
                <div class="col-md-12 mb-3 mb-md-0">
                    <label class="font-weight-bold" for="fullname">Full Name</label>
                    {{ form_row(form.name) }}
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-12">
                    <label class="font-weight-bold" for="email">Email</label>
                    {{ form_row(form.email) }}
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-12">
                    <label class="font-weight-bold" for="message">Message</label>
                    {{ form_row(form.message) }}
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-12">
                    <input type="submit" value="Send Message" class="btn btn-primary  py-2 px-4 rounded-0">
                </div>
            </div>

        {#</form>#}
        {{ form_end(form) }}
        </div>
        <!-- Contact Form End -->

        <!-- Contact Info Begin -->
        <div class="col-lg-4">
            <div class="p-4 mb-3 bg-white">
                <h3 class="h6 text-black mb-3 text-uppercase">Contact Info</h3>
                <p class="mb-0 font-weight-bold">Address</p>
                <p class="mb-4">111 Fake St. , Dumaguete City, Negros Oriental, Philippines</p>
                <p class="mb-0 font-weight-bold">Phone</p>
                <p class="mb-4"><a href="#">+1 111 1111 111</a></p>
                <p class="mb-0 font-weight-bold">Email Address</p>
                <p class="mb-0"><a href="#">info@azirial.com</a></p>
            </div>
        </div>
        <!-- Contact Info End -->
    </div>
